<%= provide(:title, "Post") %>
<h1>Create a Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: posts_path) do |f| %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %><br>

      <%= f.submit "Post it!", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>